        <!--<item name="android:listViewStyle">@style/listViewPrefs</item>-->
    </style>

    <style name="SoundWavesTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily" tools:targetApi="16">sans-serif-light</item>
    </style>

    <style name="FeedActivitySettingsTextStyle" parent="SoundWavesTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily" tools:targetApi="16">sans-serif-light</item>
        <item name="android:textSize">18sp</item>

    </style>

    <style name="FeedActivitySettingsSwitchStyle">
        <item name="android:layout_width">wrap_content</item>
