    <style name="EpisodeHeaderFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="EpisodeMinorFont" parent="@style/EpisodeHeaderFont">
