        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="SeekPlayerButton" parent="@style/PlaylistButton">
        <item name="android:layout_width">30dip</item>
    </style>

    <style name="RightTopPlayerButton" parent="@style/TopPlayerButton">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">140dp</item>
