<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp">

    <ImageView
        android:id="@+id/icon"
        android:src="@drawable/soundwaves"
        android:layout_width="56dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginBottom="4dp"
        android:paddingBottom="0dp"
        android:paddingRight="0dp"
        android:paddingLeft="0dp"
        android:contentDescription="Podcast icon"/>

    <ImageView
        android:id="@+id/play_pause_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="4dp"
        android:adjustViewBounds="true"
        android:layout_alignTop="@id/icon"
        android:layout_alignBottom="@id/icon"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_play_arrow_black"
        />

    <ImageView
        android:id="@+id/clear_button"
        android:layout_toLeftOf="@id/play_pause_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="4dp"
        android:adjustViewBounds="true"
        android:layout_alignTop="@id/icon"
        android:layout_alignBottom="@id/icon"
        android:visibility="invisible"
        android:src="@drawable/ic_clear_grey" />

    <!--
    android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:paddingLeft="0dp"
            android:paddingBottom="8dp"
                android:textAppearance="@style/NotificationTitle"
                -->
    <TextView
            android:id="@+id/notification_title"
            android:layout_toRightOf="@id/icon"
            android:layout_toLeftOf="@id/clear_button"
            android:layout_marginTop="8dp"
            android:text="Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textAppearance="@style/NotificationTitle"
             />

    <!--
    <ImageView
        android:id="@+id/next_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:adjustViewBounds="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_skip_next_black"
        android:layout_marginRight="10dp" />
-->


    <!--
    android:visibility="gone"
                android:textAppearance="@style/NotificationText"
-->
    <TextView
        android:id="@+id/notification_content"
        android:layout_below="@id/notification_title"
        android:layout_alignStart="@id/notification_title"
        android:layout_alignLeft="@id/notification_title"
        android:layout_alignEnd="@id/notification_title"
        android:layout_alignRight="@id/notification_title"
        android:layout_marginRight="8dp"
        android:text="Content"
        android:textAppearance="@style/NotificationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        />

</RelativeLayout>
