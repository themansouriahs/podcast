<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:bottom="-5dp"
        android:right="-5dp"
        android:left="-1dp">
        <shape android:shape="rectangle" >
            <solid android:color="@color/colorPrimary" />

            <stroke
                android:width="1dp"
                android:color="#000000" />
        </shape>
    </item>

</layer-list>
